pipeline {
    agent any

    environment {
        
        IMAGE_NAME = "my-java-app"
        IMAGE_TAG = "${BUILD_NUMBER}"
       
    }

    parameters {
        string(name: 'BRANCH_TAG', defaultValue: 'main', description: 'Git Branch or Tag')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "${params.BRANCH_TAG}", url: 'https://github.com/gnanendra9398/DEVOPS.git'
            }
        }

        stage('Build') {
            steps {
                dir('hello-java') { 
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Test') {
            steps {
                dir('hello-java') {
                    sh 'mvn test'
                }
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'jenkins',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )
                ]) {
                    sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('hello-java'){
                sh 'docker build -t gnanendra9398/$IMAGE_NAME:${BUILD_NUMBER} .'
            }
        }
        }
        stage('Push Image') {
            steps {
                sh 'docker push gnanendra9398/$IMAGE_NAME:${BUILD_NUMBER}'
            }
        }
        stage('remove image') {
            steps {
                sh '''
                       docker images --format "{{.Repository}}:{{.Tag}}" | \
                       grep "my-java-app" | sort -t ':' -k2 -n | head -n -1 | xargs -r docker rmi
                       '''
    }
        }
        stage('Cleanup Old Tags in Docker Hub') {
    steps {
        script {
            def repo = "gnanendra9398/my-java-app"
            def keep = 5  // Keep latest 5 tags

            withCredentials([usernamePassword(credentialsId: 'jenkins', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                sh """
                    echo "Fetching tag list for ${repo}..."
                    TAGS=\$(curl -s -u "$DOCKER_USER:$DOCKER_PASS" "https://hub.docker.com/v2/repositories/${repo}/tags/?page_size=100" | jq -r '.results[].name' | grep -v latest)

                    COUNT=0
                    for TAG in \$TAGS; do
                        COUNT=\$((COUNT + 1))
                        [ \$COUNT -le ${keep} ] && continue
                        echo "Deleting tag: \$TAG"
                        curl -s -X DELETE -u "$DOCKER_USER:$DOCKER_PASS" "https://hub.docker.com/v2/repositories/${repo}/tags/\$TAG/"
                    done
                """
            }
        }
    }
}

  }
}    
