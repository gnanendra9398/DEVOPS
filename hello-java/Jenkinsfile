pipeline {
    agent any

    tools {
        maven 'Maven3'
    }

    environment {
        IMAGE_NAME = 'hello-java:latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/gnanendra9398/DEVOPS.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }
         stage('Docker Login') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: '2c677e22-aba8-40e2-949d-fcb39f21aa85',
                        usernameVariable: 'gnanendra9398',
                        passwordVariable: 'Gnani@9398'
                    )
                ]) {
                    sh 'docker login -u $gnanendra9398 -p $Gnani@9398'
                }
            }
        }
        
     }
}

